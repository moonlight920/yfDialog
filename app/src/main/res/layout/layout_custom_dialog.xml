<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:background="@color/colorPrimary"
              android:padding="40dp">

    <ImageView android:src="@mipmap/ic_launcher" android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginTop="30dp" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="我是个自定义dialog"/>

    <Button
            android:text="我是个自定义的按钮"
            android:layout_marginTop="30dp" android:id="@+id/btn" android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</LinearLayout>